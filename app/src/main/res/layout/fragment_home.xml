<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.FragmentHome"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <!-- TODO: Update blank fragment layout -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TableRow
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido a AppMecanic"
                android:paddingBottom="50dp"
                android:paddingTop="50dp"
                android:id="@+id/textTitle"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_span="3"/>
        </TableRow>

        <TableRow
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView"
                android:background="@drawable/location"
                android:layout_span="1"/>
            <TextView
                android:layout_span="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="Encuentra al mecánico mas cercano mediante la opción de geolocalización que tenemos para ti."/>
        </TableRow>

        <TableRow
            android:gravity="center_horizontal">
            <TextView
                android:layout_span="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Obtén la información del mecánico elegido y marca a su taller para concertar una cita para que te pueda brindar los mejores servicios."/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView2"
                android:background="@drawable/llama"
                android:layout_marginLeft="5dp"
                android:layout_span="1"/>
        </TableRow>

        <TableRow
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView3"
                android:background="@drawable/evaluar"
                android:layout_span="1"/>
            <TextView
                android:layout_span="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="Evalúa los servicios brindados por tu mecánico preferido."/>
        </TableRow>

        <TableRow
            android:gravity="center_horizontal">
            <TextView
                android:layout_span="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Los mejores mecánicos cerca de tu zona."/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView4"
                android:background="@drawable/mecanico"
                android:layout_marginLeft="5dp"
                android:layout_span="1"/>
        </TableRow>

    </TableLayout>

</ScrollView>
